@model WebAdhesivoDian.Models.Cliente
<style>

    a {
    color: orangered !important;
}


a:hover > #BtnBaack {
    color: white !important;
}
</style>
@{
    ViewData["Title"] = "Crear Cliente";
}

<h1>Crear Cliente</h1>
<hr />
<h6>Campos Obligatorios [*]</h6>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input onkeydown="return event.key !== 'e' && event.key !== 'E' && event.key !== '-' && event.key !== '+'" type="number" asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimoPedido" class="control-label"></label>
                <input onkeydown="return event.key !== 'e' && event.key !== 'E' && event.key !== '-' && event.key !== '+'" asp-for="UltimoPedido" class="form-control" />
                <span asp-validation-for="UltimoPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsecutivoCadena" class="control-label"></label>
                <input onkeydown="return event.key !== 'e' && event.key !== 'E' && event.key !== '-' && event.key !== '+'" asp-for="ConsecutivoCadena" class="form-control" />
                <span asp-validation-for="ConsecutivoCadena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormateoCodigoFijo" class="control-label"></label>
                <input asp-for="FormateoCodigoFijo" class="form-control" />
                <span asp-validation-for="FormateoCodigoFijo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RutaBaseSalida" class="control-label"></label>
                <input asp-for="RutaBaseSalida" class="form-control" />
                <span asp-validation-for="RutaBaseSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referencia" class="control-label"></label>
                <input asp-for="Referencia" class="form-control" />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Formato" class="control-label"></label>
                <input asp-for="Formato" class="form-control" />
                <span asp-validation-for="Formato" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
             <div class="form-group btn-group d-grid gap-2 d-md-block">
                <a onclick="history.back()" class="btn btn-dark" style="color:white!important;">Atrás</a>
                <input type="submit" value="Crear"  class="btn btn-outline-success btn-group-lg" />
            </div>
        </form>
    </div>
</div>

