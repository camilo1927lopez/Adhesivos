@model WebAdhesivoDian.Models.PermisoRolModulo


<h1>Edit</h1>

<h4>PermisoRolModulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_permiso" />
            <div class="form-group">
                <label asp-for="Codigo_Permiso" class="control-label"></label>
                <input asp-for="Codigo_Permiso" class="form-control" />
                <span asp-validation-for="Codigo_Permiso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Rol" class="control-label"></label>
                <select asp-for="Id_Rol" class="form-control" asp-items="ViewBag.Id_Rol"></select>
                <span asp-validation-for="Id_Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Modulo" class="control-label"></label>
                <select asp-for="Id_Modulo" class="form-control" asp-items="ViewBag.Id_Modulo"></select>
                <span asp-validation-for="Id_Modulo" class="text-danger"></span>
            </div>
            <div class="form-group btn-group d-grid gap-2 d-md-block">
                <a asp-action="Index" class="btn btn btn-dark" >Atras</a>
                <input type="submit" value="Editar" class="btn btn-primary btn-group-lg" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
