@model WebAdhesivoDian.Models.Oficina

<style>

    a {
    color: orangered !important;
}


a:hover > #BtnBaack {
    color: white !important;
}

o {

color: white !important;

}
</style>
@{
    ViewData["Title"] = "Crear Oficina";
}


<h1>Crear Oficina</h1>
<hr />
<h6>Campos Obligatorios [*]</h6>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <input disabled asp-for="idCliente" class="form-control"/>
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input onkeydown="return event.key !== 'e' && event.key !== 'E' && event.key !== '-' && event.key !== '+'" type="number" asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input onkeydown="return event.key !== 'e' && event.key !== 'E' && event.key !== '-' && event.key !== '+'" type="number" asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoMunucio" class="control-label"></label>
                <input asp-for="CodigoMunucio" class="form-control" />
                <span asp-validation-for="CodigoMunucio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoCiudad" class="control-label"></label>
                <input asp-for="CodigoCiudad" class="form-control" />
                <span asp-validation-for="CodigoCiudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDireccion" class="control-label"></label>
                <input asp-for="TipoDireccion" class="form-control" />
                <span asp-validation-for="TipoDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinatario" class="control-label"></label>
                <input asp-for="Destinatario" class="form-control" />
                <span asp-validation-for="Destinatario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reponsable1" class="control-label"></label>
                <input asp-for="Reponsable1" class="form-control" />
                <span asp-validation-for="Reponsable1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reponsable2" class="control-label"></label>
                <input asp-for="Reponsable2" class="form-control" />
                <span asp-validation-for="Reponsable2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reponsable3" class="control-label"></label>
                <input asp-for="Reponsable3" class="form-control" />
                <span asp-validation-for="Reponsable3" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>*@
             <div class="form-group btn-group d-grid gap-2 d-md-block">
                <a onclick="history.back()" class="btn btn-dark" style="color:white!important;">Atrás</a>
                <input type="submit" value="Crear"  class="btn btn-outline-success btn-group-lg" />
            </div>
        </form>
    </div>
</div>

