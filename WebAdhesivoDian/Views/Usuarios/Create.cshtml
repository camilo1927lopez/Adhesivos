@model WebAdhesivoDian.ModelsViews.UsuarioView
<style>

    a {
    color: orangered !important;
}


a:hover > #BtnBaack {
    color: white !important;
}

@{
    ViewData["Title"] = "Crear Usuario";
}

</style>
<h1>Crear un Usuario</h1>

<h4>Usuario</h4>
<hr />
<h6>Campos Obligatorios [*]</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password"  asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="passwordConfirm" class="control-label"></label>
                <input type="password" asp-for="passwordConfirm" class="form-control" />
                <span asp-validation-for="passwordConfirm" class="text-danger"></span>
            </div>
            
            @*<div class="form-group form-check" style="width: 20px">
            <label asp-for="IdRol" class="control-label"></label>
            <div class="form-check form-check-inline"> <input class="form-check-input" type="radio" name="rol" asp-for="IdRol" value=1 > <label class="form-check-label" for="inlineRadio1">Administrador</label> </div>
            <div class="form-check form-check-inline"> <input class="form-check-input" type="radio" name="rol" asp-for="IdRol" value=2 > <label class="form-check-label" for="inlineRadio1">Procesador</label> </div>
            <div class="form-check form-check-inline"> <input class="form-check-input" type="radio" name="rol" asp-for="IdRol" value=3 > <label class="form-check-label" for="inlineRadio1">Controller</label> </div>


            </div>*@
            <div class="form-group">
                @*<label asp-for="IdRol" class="control-label"></label>
                <input asp-for="IdRol" class="form-control" />
                <span asp-validation-for="IdRol" class="text-danger"></span>*@
                <label asp-for="IdRol" class="control-label"></label>
                <select class="form-control" name="IdRol" id="IdRol" required>
                    @foreach (Roles roles in ViewBag.ListaRoles)
                    {
                        if (roles.Id == Model.IdRol)
                        {
                            <option selected value="@roles.Id">@roles.Nombre</option>
                        }
                        else
                        {
                            <option value="@roles.Id">@roles.Nombre</option>
                        }
                        @*<option value="@roles.Id">@roles.Nombre</option>*@

                    }
                </select>
            </div>


            <div class="form-group btn-group d-grid gap-2 d-md-block">
                <a onclick="history.back()" class="btn btn-dark" style="color:white!important;">Atrás</a>
                <input type="submit" value="Crear"  class="btn btn-outline-success btn-group-lg" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
