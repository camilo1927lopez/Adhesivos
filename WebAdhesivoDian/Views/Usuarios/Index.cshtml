@model IEnumerable<WebAdhesivoDian.Models.Usuario>



<h1>Gestión de Usuarios</h1>

<p>
    <a asp-action="Create" class ="btn btn-outline-success">Crear Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                   @Html.DisplayFor(modelItem => item.Roles.Nombre)
            </td>
             <td>
                    @if (item.Estado)
                    {
                        <p>Activo</p>
                    }else
                    {
                        <p>Inactivo</p>  
                    }
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdUsuario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUsuario">Delete</a>
            </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-outline-success">Editar</a>

                </td>
        </tr>
}
    </tbody>
</table>
